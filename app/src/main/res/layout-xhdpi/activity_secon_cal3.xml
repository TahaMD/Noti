<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".SeconActivityCal3">

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--TextView-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18.5dp"
            android:fontFamily="@font/fredoka_bold"
            android:text="@string/select_your_orientation"
            android:textColor="?colorOnPrimary"
            android:textSize="32sp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Sciences Button-->

            <Button
                android:id="@+id/bsc3"
                android:backgroundTint="?colorOnPrimary"
                android:layout_width="140dp"
                android:layout_height="63dp"
                android:layout_marginEnd="5dp"
                android:elevation="8dp"
                android:text="Sciences"
                android:fontFamily="@font/fredoka_bold"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                app:cornerRadius="80dp"
                tools:ignore="RtlHardcoded"
                style="?android:attr/buttonBarButtonStyle" />

            <!--Math Button-->

            <Button
                android:id="@+id/bma3"
                android:backgroundTint="?colorOnPrimary"
                android:layout_width="140dp"
                android:layout_height="63dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fredoka_bold"
                android:elevation="8dp"
                android:text="Math"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                app:cornerRadius="80dp"
                tools:ignore="RtlHardcoded"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Lettre Button-->

            <Button
                android:id="@+id/ble3"
                android:backgroundTint="?colorOnPrimary"
                android:layout_width="140dp"
                android:layout_height="63dp"
                android:layout_marginEnd="5dp"
                android:elevation="8dp"
                android:text="Lettre"
                android:fontFamily="@font/fredoka_bold"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                app:cornerRadius="80dp"
                tools:ignore="RtlHardcoded"
                style="?android:attr/buttonBarButtonStyle" />

            <!--Info Button-->

            <Button
                android:id="@+id/bin3"
                android:backgroundTint="?colorOnPrimary"
                android:layout_width="140dp"
                android:layout_height="63dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/fredoka_bold"
                android:elevation="8dp"
                android:text="Info"
                android:textColor="?colorPrimary"
                android:textSize="16sp"
                app:cornerRadius="80dp"
                tools:ignore="RtlHardcoded"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!--Technique Button-->

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:backgroundTint="?colorOnPrimary"
            android:id="@+id/bte3"
            android:layout_width="290dp"
            android:layout_height="63dp"
            android:fontFamily="@font/fredoka_bold"
            android:gravity="center"
            android:elevation="8dp"
            android:text="Technique"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:textAlignment="center"
            app:cornerRadius="80dp" />

        <!--Economie Button-->

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:backgroundTint="?colorOnPrimary"
            android:id="@+id/bec3"
            android:layout_width="290dp"
            android:layout_height="63dp"
            android:fontFamily="@font/fredoka_bold"
            android:gravity="center"
            android:elevation="8dp"
            android:text="Economie"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:textAlignment="center"
            app:cornerRadius="80dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>